<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3E3B3B"
    tools:context=".nounsverbsRound3">

    <ImageButton
        android:id="@+id/image1"
        android:layout_width="139dp"
        android:layout_height="128dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="88dp"
        android:backgroundTint="@android:color/background_light"
        android:scaleType="fitXY"
        android:tag="NOUN"
        app:layout_constraintBottom_toTopOf="@+id/image3"
        app:layout_constraintEnd_toStartOf="@+id/image2"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@drawable/a" />

    <ImageButton
        android:id="@+id/image2"
        android:layout_width="139dp"
        android:layout_height="128dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@android:color/background_light"
        android:scaleType="fitXY"
        android:tag="VERB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image1"
        app:layout_constraintTop_toBottomOf="@+id/questionWord"
        tools:srcCompat="@drawable/b" />

    <ImageButton
        android:id="@+id/image5"
        android:layout_width="139dp"
        android:layout_height="128dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="48dp"
        android:backgroundTint="@android:color/background_light"
        android:tag="VERB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/image6"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@drawable/f" />

    <ImageButton
        android:id="@+id/image6"
        android:layout_width="139dp"
        android:layout_height="128dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="43dp"
        android:backgroundTint="@android:color/background_light"
        android:tag="NOUN"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image4"
        tools:srcCompat="@drawable/e" />

    <ImageButton
        android:id="@+id/image3"
        android:layout_width="139dp"
        android:layout_height="128dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="53dp"
        android:backgroundTint="@android:color/background_light"
        android:tag="VERB"
        app:layout_constraintBottom_toTopOf="@+id/image5"
        app:layout_constraintEnd_toStartOf="@+id/image4"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@drawable/c" />

    <ImageButton
        android:id="@+id/image4"
        android:layout_width="139dp"
        android:layout_height="128dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="53dp"
        android:backgroundTint="@android:color/background_light"
        android:tag="NOUN"
        app:layout_constraintBottom_toTopOf="@+id/image6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image2"
        tools:srcCompat="@drawable/d" />

    <EditText
        android:id="@+id/questionWord"
        android:layout_width="228dp"
        android:backgroundTint="@color/colorAccent"
        android:layout_height="56dp"
        android:layout_marginStart="109dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="56dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="IDENTIFY : VERB"
        android:textColor="#fff"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/image1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>