<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/ic_picturebackground"
    android:layout_height="match_parent"
    tools:context=".PictureMenuActivity">


    <TextView
        android:id="@+id/textView_PhotoGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/alegreya_sans_bold"
        android:text="Photo Game"
        android:textColor="@color/colorAccent"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="271dp"
        android:layout_height="112dp"
        android:layout_marginBottom="148dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/alegreya_sans_bold"
        android:text="Start Playing"
        android:textColor="#FFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnManagePhotos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnManagePhotos"
        android:layout_width="200dp"
        android:layout_height="61dp"
        android:layout_marginBottom="136dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/alegreya_sans_bold"
        android:text="Manage Photos"
        android:textColor="#FFFF"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>